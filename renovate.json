{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchManagers": ["dockerfile", "docker-compose"],
      "groupName": "docker images"
    },
    {
      "matchManagers": ["npm"],
      "groupName": "npm dependencies"
    }
  ]
}
